<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/addMenu"
    tools:context=".MainActivity">

    # 재현 screen04
    #뒤로가기 버튼
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/backbtn"/>


    <TextView
        android:id="@+id/menu_titleTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:text="menutitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            # 등록된 메뉴의 이미지가 뜰 view
            <ImageView
                android:id="@+id/addedMyImageView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/picture_add_img"
                android:scaleType="fitCenter"
                android:layout_gravity="center_horizontal|center_vertical"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:text="주요재료"/>

            #요리재료작성
            <TextView
                android:id="@+id/ingredientTextView"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:gravity="top"
                android:background="@drawable/border_round"
                />
            #요리순서작성

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:text="요리 순서"/>

            <TextView
                android:id="@+id/orderTextView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:gravity="top"
                android:background="@drawable/border_round"
                />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btnGridLayout"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1">

            <ImageButton
                android:id="@+id/hbtn1"
                android:background="@drawable/ripple_leftbtn"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:src="@drawable/hbtn1"/>

            <ImageButton
                android:background="@drawable/rippe_rightbtn"
                android:id="@+id/hbtn2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:src="@drawable/hbtn2"/>

        </GridLayout>

    </LinearLayout>




</LinearLayout>